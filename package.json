{
  "name": "semantic-release-vsce",
  "version": "0.0.0-development",
  "description": "semantic-release plugin to package and publish VS Code extensions",
  "license": "MIT",
  "engines": {
    "node": "20 || >=22"
  },
  "repository": "https://github.com/felipecrs/semantic-release-vsce.git",
  "bugs": "https://github.com/felipecrs/semantic-release-vsce/issues",
  "homepage": "https://github.com/felipecrs/semantic-release-vsce#readme",
  "author": "Morten Henriksen <mh@gi2.dk>",
  "contributors": [
    "Felipe Santos <felipecassiors@gmail.com>"
  ],
  "keywords": [
    "semantic-release",
    "semantic-release-plugin",
    "vscode",
    "vsce"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "prettier --check . && eslint . ",
    "test": "nyc ava",
    "posttest": "npm run lint && installed-check --ignore-dev --ignore=semantic-release",
    "prepare": "husky"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "lib/die.js"
    ],
    "include": [
      "index.js",
      "lib/**/*.js"
    ]
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.9.0"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "@vscode/vsce": "^3.0.0",
    "execa": "^5.0.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.2.1",
    "ovsx": "^0.10.0"
  },
  "peerDependencies": {
    "semantic-release": ">=18"
  },
  "devDependencies": {
    "ava": "^6.1.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.12.0",
    "husky": "^9.0.11",
    "installed-check": "^9.0.0",
    "lint-staged": "^15.0.1",
    "neostandard": "^0.11.6",
    "nyc": "^17.0.0",
    "prettier": "^3.2.5",
    "proxyquire": "^2.1.3",
    "semantic-release": "^24.0.0",
    "sinon": "^19.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "publishConfig": {
    "provenance": true
  }
}
